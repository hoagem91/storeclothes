@model IEnumerable<store_clothes.Models.Product>

@{
    Layout = "_AdminLayout";
}
<!-- In _Layout.cshtml -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="~/css/admin/admin.css" rel="stylesheet" type="text/css" />
<link href="~/css/admin/product/productAdmin.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Danh sách sản phẩm</h2>
        <a href="@Url.Action("CreateProduct")" class="btn btn-new">
            <i class="fas fa-plus" style="margin-right:10px"></i> Thêm sản phẩm
        </a>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4" >
                <div class="card product-card" style="border-radius:15px">
                    <div class="card-image" style="padding: 15px; border-radius: 8px;">
                        <img src="~/assests/products/@product.ImageUrl" class="card-img-top" style="border-radius:15px" alt="@product.Name">
                    </div>
                    <div class="card-body">
                        <div class="d-block text-center justify-content-between align-items-start">
                            <div>
                                <h5 class="product-name">@product.Name</h5>
                            </div>
                            <span class="product-price">@(String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:N0} ₫", product.Price))</span>
                            <div class="icon-list">
                                <a href ="@Url.Action("UpdateProduct", new { id = product.Id })" class="btn btn-sm">
                                    <img style="width: 16px;height: 16px;cursor:pointer" src="~/assests/admin/changes.png" alt="Alternate Text" />
                                </a>
                                <a href="@Url.Action("DeleteProduct", new { id = product.Id })" class="btn btn-sm"><img style="width: 16px;height: 16px;cursor:pointer" src="~/assests/admin/deletet.png" alt="Alternate Text" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>