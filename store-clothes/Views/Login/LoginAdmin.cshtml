@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - LITA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-container">
        <!-- Hình ảnh bên trái -->
        <div class="image-section"></div>

        <!-- Form đăng nhập bên phải -->
        <div class="form-section">
            <div class="form-container">
                <h3 class="text-center">Admin Login - LITA</h3>
                <p class="text-center text-muted">Admin Portal for managing the LITA platform.</p>

                <form method="post" action="@Url.Action("AuthenticateAdmin", "Login")">
                    <input type="text" class="input-field" name="username" placeholder="Enter your Admin Username" required>
                    <input type="password" class="input-field" name="password" placeholder="Enter your Admin Password" required>
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <input type="checkbox" id="rememberMe">
                            <label for="rememberMe">Remember me</label>
                        </div>
                        <a href="@Url.Action("Index", "ForgotPassword")">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn-login">Login</button>
                </form>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger text-center mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>

</body>
</html>
