@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - LITA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-container">
        <!-- Hình ảnh bên trái -->
        <div class="image-section"></div>

        <!-- Form đăng nhập bên phải -->
        <div class="form-section">
            <div class="form-container">
                <h3 class="text-center">Welcome to LITA</h3>
                <div class="d-flex justify-content-center my-3">
                    <button class="btn-toggle me-2 active">Login</button>
                    <a href="@Url.Action("Index", "Register")" class="btn-toggle">Register</a>
                </div>
                <p class="text-center text-muted">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>

                <form method="post" action="@Url.Action("Authenticate", "Login")">
                    <input type="email" class="input-field" name="email" placeholder="Enter your Email" required>
                    <input type="password" class="input-field" name="password" placeholder="Enter your Password" required>
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <input type="checkbox" id="rememberMe">
                            <label for="rememberMe">Remember me</label>
                        </div>
                        <a href="@Url.Action("Index", "ForgotPassword")">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn-login">Login</button>
                </form>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger text-center mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>

</body>
</html>
<script>
    <script>
        document.querySelector(".btn-login").addEventListener("click", function (event) {
            event.preventDefault();
            window.location.href = "/Home/Index";
        });
</script>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}
