@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - LITA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-container">
        <!-- Hình ảnh bên trái -->
        <div class="image-section"></div>

        <!-- Form đăng nhập bên phải -->
        <div class="form-section">
            <div class="form-container">
                <h3 class="text-center">Chào mừng đến với LITA</h3>
                <div class="d-flex justify-content-center my-3">
                    <button class="btn-toggle me-2 active">Đăng nhập</button>
                    <a href="@Url.Action("Index", "Register")" class="btn-toggle" style="margin-right:8px">Đăng ký</a>
                    <a href="@Url.Action("LoginAdmin", "Login")" class="btn-toggle">Quản trị</a>
                </div>
                <p class="text-center text-muted">Khám phá vẻ đẹp trong sự đơn giản, nơi mỗi chi tiết nhỏ đều toát lên sự tinh tế và hoàn hảo</p>

                <!-- Form đăng nhập -->
                <form method="post" action="@Url.Action("Authenticate", "Login")">
                    <input type="email" class="input-field" name="email" placeholder="Nhập email của bạn" required>
                    <input type="password" class="input-field" name="password" placeholder="Nhập mật khẩu của bạn" required>
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <input type="checkbox" id="rememberMe">
                            <label for="rememberMe">Ghi nhớ đăng nhập</label>
                        </div>
                        <a href="@Url.Action("Index", "ForgotPassword")">Quên mật khẩu?</a>
                    </div>
                    <button type="submit" class="btn-login">Đăng nhập</button>
                </form>

                <!-- Hiển thị thông báo lỗi nếu có -->
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger text-center mt-3">@ViewBag.Error</div>
                }

                <!-- Hiển thị thông báo thành công nếu có -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Hiển thị thông báo lỗi nếu có -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mt-3">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>
