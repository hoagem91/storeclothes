@model store_clothes.Models.User
<link href="~/css/admin/user/createUser.css" rel="stylesheet" />

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "User")';
            }, 3000); // Chuyển trang sau 3 giây
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="form-card">
        <div class="form-header">
            <h2>Thêm Người Dùng</h2>
        </div>

        @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "user-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Name">Tên:</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập họ và tên" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập địa chỉ email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Password">Mật khẩu:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save" style="margin-right:8px"></i> Lưu
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa fa-times" style="margin-right:8px"></i> Hủy
                </a>
            </div>
        }
    </div>
</div>