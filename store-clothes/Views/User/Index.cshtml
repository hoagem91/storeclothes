@model IEnumerable<store_clothes.Models.User>
@{
    Layout = "_AdminLayout"; // Sử dụng layout từ ViewData, ví dụ _AdminLayout
}
<link href="~/css/admin/user/userAdmin.css" rel="stylesheet" />

<div class="header-content">
    <h2 class="text-center mt-3">Danh sách người dùng</h2>
    <a href="@Url.Action("CreateUser", "User")" class="btn-new">
        <i class="plus-icon">+</i> Thêm Người Dùng
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("UpdateUser", new { id = user.Id })" class="btn btn-warning btn-sm" style="margin-right: 5px;color: #000;align-items: center;font-size: 16px;"><img style="width:14px;height:14px;margin-right:5px" src="~/assests/admin/changes.png" />Sửa</a>
                    <a href="@Url.Action("DeleteUser", new { id = user.Id })" class="btn btn-danger btn-sm" style="margin-right: 5px;color: #000;align-items: center;font-size: 16px;"><img style="width:14px;height:14px;margin-right:5px" src="~/assests/admin/deletet.png" />Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
