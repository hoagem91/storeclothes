@{
    Layout = null;
}
@model List<store_clothes.Models.Product>

@{
    ViewData["Title"] = "LITA Store";
}
<title>LITA Store</title>

<!-- Styles -->
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="/js/main.js" defer></script>

<header>
    <div class="navbar">
        <div class="logo">LITA</div>
        <div class="auth-buttons">
            <a href="@Url.Action("Index", "Login")" class="login">SIGN IN</a>
            <a href="@Url.Action("Index", "Register")" class="signup">SIGN UP</a>
        </div>
    </div>
</header>

<!-- Swiper Carousel -->
<div class="position-relative">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <a href="@Url.Action("Index", "Login")">
                    <img src="/assests/Home/banner3.jpg" class="d-block w-100" alt="Banner 1">
                </a>
            </div>
            <div class="swiper-slide">
                <a href="@Url.Action("Index", "Login")">
                    <img src="/assests/Home/banner2.jpg" class="d-block w-100" alt="Banner 2">
                </a>
            </div>
            <div class="swiper-slide">
                <a href="@Url.Action("Index", "Login")">
                    <img src="/assests/Home/banner1.jpg" class="d-block w-100" alt="Banner 3">
                </a>
            </div>
        </div>
        <!-- Pagination dots -->
        <div class="swiper-pagination"></div>
        <!-- Navigation buttons (hidden) -->
        <div class="swiper-button-prev" style="display: none;"></div>
        <div class="swiper-button-next" style="display: none;"></div>
    </div>

    <!-- Click zones -->
    <div class="invisible-zone left-zone"></div>
    <div class="invisible-zone right-zone"></div>
</div>

<!-- Swiper control script -->
<script>
    const swiper = new Swiper('.mySwiper', {
        loop: true,
        autoplay: {
            delay: 4000,
            disableOnInteraction: false,
        },
        speed: 1000,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        }
    });

    document.querySelector(".left-zone").addEventListener("click", () => {
        swiper.slidePrev();
    });

    document.querySelector(".right-zone").addEventListener("click", () => {
        swiper.slideNext();
    });
</script>

<!-- New Arrivals Section -->
<section class="container mt-5">
    <h2 class="section-title text-center">LITA STORE</h2>
    <p class="section-subtitle text-center">-Khám phá vẻ đẹp trong sự đơn giản, nơi mỗi chi tiết nhỏ đều toát lên sự tinh tế và hoàn hảo.-</p>

    <!-- Buttons để chọn danh mục -->
    <div class="btn-group d-flex justify-content-center my-3" role="group">
        <button class="btn btn-light filter-btn" data-category="1">T-Shirt</button>
        <button class="btn btn-dark filter-btn active" data-category="2">Áo Polo</button>
        <button class="btn btn-light filter-btn" data-category="3">Shirt</button>
        <button class="btn btn-light filter-btn" data-category="4">Hoodie</button>
        <button class="btn btn-light filter-btn" data-category="5">Jacket</button>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card" data-category="@product.CategoryId">
                <a href="@Url.Action("Index", "Login")">
                    <img src="@Url.Content("~/assests/products/" + product.ImageUrl)" alt="@product.Name">
                    <h3 class="product-name">@product.Name</h3>
                    <p class="new-price">
                        @(product.Price.HasValue ? product.Price.Value.ToString("#,##0") + "đ" : "0đ")
                    </p>
                </a>
            </div>
        }
    </div>

    <!-- Nút View More -->
    <div class="text-center mt-4">
        <button id="btn-view-more" class="btn btn-dark" onclick="redirectToLogin()">View More</button>
    </div>
</section>

