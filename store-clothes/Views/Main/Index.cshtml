@{
    Layout = null;
}
@model List<store_clothes.Models.Product>

@{
    ViewData["Title"] = "LITA Store";
}
<title>LITA Store</title>
<link rel="stylesheet" href="/css/main.css">
<script src="/js/main.js" defer></script>

<header>
    <div class="navbar">
        <div class="logo">LITA</div>
        <div class="auth-buttons">
            <a href="@Url.Action("Index", "Login")" class="login">Sign in</a>
            <a href="@Url.Action("Index", "Register")" class="signup">Sign Up</a>
        </div>
    </div>
</header>

<!-- Bootstrap Carousel -->
<div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/assests/Home/banner1.jpg" class="d-block w-100" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="/assests/Home/banner2.jpg" class="d-block w-100" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="/assests/Home/banner3.jpg" class="d-block w-100" alt="Banner 3">
        </div>
    </div>

    <!-- Nút điều hướng -->
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Thêm Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- New Arrivals Section -->
<section class="container mt-5">
    <h2 class="section-title text-center">New Arrivals</h2>
    <p class="section-subtitle text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>

    <!-- Buttons để chọn danh mục -->
    <div class="btn-group d-flex justify-content-center my-3" role="group">
        <button class="btn btn-light filter-btn" data-category="1">T-Shirt</button>
        <button class="btn btn-dark filter-btn active" data-category="2">Áo Polo</button>
        <button class="btn btn-light filter-btn" data-category="3">Shirt</button>
        <button class="btn btn-light filter-btn" data-category="4">Hoodie</button>
        <button class="btn btn-light filter-btn" data-category="5">Jacket</button>
    </div>

    <!-- Danh sách sản phẩm theo thiết kế chuẩn -->
    <div class="product-grid">
        @foreach (var product in Model)
{
    <div class="product-card" data-category="@product.CategoryId">
        <img src="@Url.Content("~/assests/products/" + product.ImageUrl)" alt="@product.Name">
        <h3 class="product-name">@product.Name</h3>
                <p class="new-price">
                    @(product.Price.HasValue ? product.Price.Value.ToString("#,##0") + "đ" : "0đ")
                </p>
    </div>
}

    </div>

    <!-- Nút View More -->
    <div class="text-center mt-4">
        <button id="btn-view-more" class="btn btn-dark" onclick="redirectToLogin()">View More</button>
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="row align-items-start mb-3">
            <div class="col-md-6 text-start">
                <span class="footer-brand">LITA</span>
            </div>
            <div class="col-md-6 text-end">
                <p><i class="fa-solid fa-map-marker-alt"></i> 345 Faulkner Drive, Suite 4, Charlottesville, CA, 12345</p>
                <p><i class="fa-solid fa-phone"></i> (123) 456-7890</p>
                <p><i class="fa-solid fa-print"></i> (123) 456-7890</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6"></div>
            <div class="col-md-6 text-end">
                <p class="social-media">Social Media</p>
                <div class="social-icons">
                    <a href="https://www.facebook.com/lita" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="https://www.twitter.com/lita" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                    <a href="https://www.linkedin.com/company/lita" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                    <a href="https://www.youtube.com/lita" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                    <a href="https://www.instagram.com/lita" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                    <a href="https://www.google.com/lita" target="_blank"><i class="fa-brands fa-chrome"></i></a>
                    <a href="/rss" target="_blank"><i class="fa-solid fa-rss"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr class="footer-divider" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <div class="footer-links-container">
                    <span class="footer-link">About Us</span>
                    <span class="footer-link">Contact Us</span>
                    <span class="footer-link">Help</span>
                    <span class="footer-link">Privacy Policy</span>
                    <span class="footer-link">Disclaimer</span>
                </div>
            </div>
        </div>
    </div>
</footer>
