@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - LITA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-container">
        <!-- Hình ảnh bên trái -->
        <div class="image-section"></div>

        <!-- Form quên mật khẩu bên phải -->
        <div class="form-section">
            <div class="form-container">
                <h3 class="text-center">Forgot Your Password?</h3>
                <p class="text-center text-muted">Enter your email and we'll send you a link to reset your password.</p>

                <form method="post" action="@Url.Action("ForgotPassword", "Account")">
                    <input type="email" class="input-field" name="email" placeholder="Enter your Email" required>
                    <button type="submit" class="btn-login">Send Reset Link</button>
                </form>

                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Login" )">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
