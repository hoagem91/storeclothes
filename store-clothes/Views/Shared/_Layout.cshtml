<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LITA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet" /> <!-- Tham chiếu đến file CSS tùy chỉnh -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="/js/layout.js" defer></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">LITA</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Pages</a></li>
                </ul>
                <div class="ms-auto d-flex align-items-center">
                    <div class="search-container">
                        <input type="text" id="searchInput" class="search-box" placeholder="Tìm kiếm sản phẩm...">
                        <button class="search-btn">Tìm Kiếm</button>
                    </div>
                    <a href="#" class="nav-link search-toggle" onclick="toggleSearch()">
                        <i class="fa-solid fa-search"></i>
                    </a>

                    <div class="user-menu">
                        <a href="#" class="nav-link user-icon">
                            <i class="fa-solid fa-user"></i>
                        </a>
                        <div class="user-dropdown hidden">
                            <!-- Mặc định ẩn -->
                            <p class="user-name">Tên User</p>
                            <a href="@Url.Action("Index", "Login")" class="logout-btn">Đăng xuất</a>
                        </div>
                    </div>

                    <a href="#" class="nav-link"><i class="fa-solid fa-star"></i></a>
                    <a href="@Url.Action("Index","Cart")" class="nav-link"><i class="fa-solid fa-shopping-cart"></i></a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody() <!-- Hiển thị nội dung của từng trang -->
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-items-start mb-3">
                <div class="col-md-6 text-start">
                    <span class="footer-brand">LITA</span>
                </div>
                <div class="col-md-6 text-end">
                    <p><i class="fa-solid fa-map-marker-alt"></i> 345 Faulkner Drive, Suite 4, Charlottesville, CA, 12345</p>
                    <p><i class="fa-solid fa-phone"></i> (123) 456-7890</p>
                    <p><i class="fa-solid fa-print"></i> (123) 456-7890</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6"></div>
                <div class="col-md-6 text-end">
                    <p class="social-media">Social Media</p>
                    <div class="social-icons">
                        <a href="https://www.facebook.com/lita" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="https://www.twitter.com/lita" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                        <a href="https://www.linkedin.com/company/lita" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                        <a href="https://www.youtube.com/lita" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                        <a href="https://www.instagram.com/lita" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                        <a href="https://www.google.com/lita" target="_blank"><i class="fa-brands fa-chrome"></i></a>
                        <a href="/rss" target="_blank"><i class="fa-solid fa-rss"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <hr class="footer-divider" />
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="footer-links-container">
                        <span class="footer-link">About Us</span>
                        <span class="footer-link">Contact Us</span>
                        <span class="footer-link">Help</span>
                        <span class="footer-link">Privacy Policy</span>
                        <span class="footer-link">Disclaimer</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
