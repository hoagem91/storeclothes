<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="LITA - Cửa hàng thời trang trực tuyến với các sản phẩm chất lượng cao.">
    <meta name="keywords" content="thời trang, quần áo, LITA, mua sắm trực tuyến">
    <title>@ViewBag.Title - LITA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/products/products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LITA</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["Controller"].ToString() == "Product" && ViewContext.RouteData.Values["Action"].ToString() == "Index") ? "active" : "")" asp-controller="Product" asp-action="Index">Products</a>
                    </li>
                </ul>
                <div class="ms-auto d-flex align-items-center">
                    <div class="search-container">
                        <form asp-controller="Product" asp-action="Index" method="get" class="search-form d-flex align-items-center">
                            <input type="text" name="search" class="form-control search-input" placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.Search" />
                            <button type="submit" class="btn btn-outline-primary ms-2"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </div>
                    <a href="@Url.Action("Login", "Account")" class="nav-link"><i class="fa-solid fa-user"></i></a>
                    <a href="#" class="nav-link"><i class="fa-solid fa-heart"></i></a>
                    <!-- Thêm lại giỏ hàng -->
                    <a href="@Url.Action("Index", "Cart")" class="nav-link position-relative">
                        <i class="fa-solid fa-shopping-cart"></i>
                        @if (ViewBag.CartCount != null && ViewBag.CartCount > 0)
                        {
                            <span class="badge bg-primary position-absolute top-0 start-100 translate-middle">@ViewBag.CartCount</span>
                        }
                    </a>

                </div>
            </div>
        </div>
    </nav>


    <!-- Page Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-start mb-4">

                <div class="col-md-6 text-start">
                    <span class="footer-brand">LITA</span>
                </div>
                <div class="col-md-6 text-end">
                    <p><i class="fa-solid fa-map-marker-alt"></i> 345 Faulkner Drive, Suite 4, Charlottesville, CA, 12345</p>
                    <p><i class="fa-solid fa-phone"></i> (123) 456-7890</p>
                    <p><i class="fa-solid fa-print"></i> (123) 456-7890</p>

                    <p class="social-media mt-3">Social Media</p>

                    <div class="social-icons">
                        <a href="https://www.facebook.com/lita" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="https://www.twitter.com/lita" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                        <a href="https://www.linkedin.com/company/lita" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                        <a href="https://www.youtube.com/lita" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                        <a href="https://www.instagram.com/lita" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                        <a href="https://www.google.com/lita" target="_blank"><i class="fa-brands fa-chrome"></i></a>
                        <a href="/rss" target="_blank"><i class="fa-solid fa-rss"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <hr class="footer-divider" />
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="footer-links-container">

                        <a href="#" class="footer-link">ABOUT US</a>
                        <a href="#" class="footer-link">CONTACT US</a>
                        <a href="#" class="footer-link">HELP</a>
                        <a href="#" class="footer-link">PRIVACY POLICY</a>
                        <a href="#" class="footer-link">DISCLAIMER</a>

                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/products/products.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>